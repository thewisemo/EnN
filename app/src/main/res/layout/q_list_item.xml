<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_question_header"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="How old are you?" />

        <LinearLayout
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_first_answer"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="10dp"
                android:background="@color/colorGray"
                android:padding="20dp"
                android:textColor="@android:color/black"
                android:onClick="onAnswerClick"
                tools:text="I have 16." />

            <TextView
                android:id="@+id/tv_second_answer"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="15dp"
                android:background="@color/colorGray"
                android:padding="20dp"
                android:textColor="@android:color/black"
                android:onClick="onAnswerClick"
                tools:text="I am 16." />

            <TextView
                android:id="@+id/tv_third_answer"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="15dp"
                android:background="@color/colorGray"
                android:padding="20dp"
                android:textColor="@android:color/black"
                android:onClick="onAnswerClick"
                tools:text="I have 16 years." />

            <TextView
                android:id="@+id/tv_fourth_answer"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="15dp"
                android:background="@color/colorGray"
                android:padding="20dp"
                android:textColor="@android:color/black"
                android:onClick="onAnswerClick"
                tools:text="I am 16 years." />

            <TextView
                android:id="@+id/tv_skip"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="15dp"
                android:background="@color/colorGray"
                android:padding="20dp"
                android:text="@string/skip"
                android:onClick="onAnswerClick"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>